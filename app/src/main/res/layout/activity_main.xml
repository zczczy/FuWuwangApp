<?xml version="1.0" encoding="utf-8"?>
<com.zczczy.leo.fuwuwangapp.viewgroup.FragmentTabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_host"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1D1D1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!-- tabhost上面一条黑色分割 @drawable/line_shop -->
        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:clickable="false" />
        <!-- 调换framelayout和tabwidget的前后顺序可以分别实现tab的top和在底下的效果 -->
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/main_tab_color"
            android:divider="@null" />
    </LinearLayout>

</com.zczczy.leo.fuwuwangapp.viewgroup.FragmentTabHost>