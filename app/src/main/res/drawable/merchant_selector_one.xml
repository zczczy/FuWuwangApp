<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item>
                <shape>
                    <solid android:color="#fbe970" />
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="1dp" android:dashWidth="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="0dp" />
                    <!-- <stroke android:width="0.3dp" android:color="#bdbdbd" android:dashGap="1dp" android:dashWidth="0dp" />-->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>